@model Wedding

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container">
        <a class="navbar-brand" href="/dashboard">
            <h2>Plan Your Wedding</h2>
        </a>
        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
            <ul class="navbar-nav align-items-center">
                    <a class="text-dark" href="/dashboard"> <h5> Dashboard</h5></a>
                    <a class="nav-link btn btn-outline-dark logoutbtn" asp-area="" asp-controller="Home" asp-action="Logout">Log Out</a>
            </ul>
        </div>
    </div>
</nav>

<div class="card mx-auto col-8">
    <form action="/addwedding" method="POST">
            <div class="form-group">
                <label asp-for="WedderOne">Wedder One</label>
                <input type="text" class="form-control" asp-for="WedderOne">
                <span class="text-danger" asp-validation-for="WedderOne"></span>
            </div>

            <div class="form-group">
                <label asp-for="WedderTwo">Wedder Two</label>
                <input type="text" class="form-control" asp-for="WedderTwo">
                <span class="text-danger" asp-validation-for="WedderTwo"></span>
            </div>

            <div class="form-group">
                <label asp-for="Date">Date</label>
                <input type="date" class="form-control" asp-for="Date">
                <span class="text-danger" asp-validation-for="Date"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address"><i class="fa fa-address-card-o"></i>Address</label>
                <input type="text" class="form-control" asp-for="Address" placeholder="542 W. 15th Street">
                <span class="text-danger" asp-validation-for="Address"></span>
            </div>

            <div class="form-group">
                <label asp-for="City"><i class="fa fa-institution"></i>City</label>
                <input type="text" class="form-control" asp-for="City" placeholder="New York">
                <span class="text-danger" asp-validation-for="City"></span>
            </div>

            <div class="form-row">
                <div class="col-6 form-group">
                    <label asp-for="State">State</label>
                    <input type="text" class="form-control" asp-for="State" placeholder="NY">
                    <span class="text-danger" asp-validation-for="State"></span>
                </div>
                <div class="col-6 form-group">
                    <label asp-for="Zip">Zip</label>
                    <input type="text" class="form-control" asp-for="Zip" placeholder="10001">
                    <span class="text-danger" asp-validation-for="Zip"></span>
                </div>
            </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>